<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/register_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            <LinearLayout
                    android:id="@+id/fragment_logistics_back"
                    android:layout_centerVertical="true"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/return_top"
                        android:layout_width="12dp"
                        android:layout_height="22dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/delivery_info"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/action_bar_size"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <cool.zzy.sems.application.ui.CircleImageView
                        android:id="@+id/fragment_logistics_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/default_delivery_avatar"/>

                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fragment_logistics_status"
                                android:text="其他"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_logistics_info"
                            android:textColor="@color/text_grey_666"
                            android:textSize="15sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_logistics"
                            android:textColor="@color/text_grey_888"
                            android:textSize="15sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragment_logistics_user_info"
                        android:text="姓名 | 手机号"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragment_logistics_post_id"
                        android:text="快递单号"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragment_logistics_created"
                        android:text="创建时间"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragment_logistics_location_name"
                        android:text="地址：xxx"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@+id/fragment_logistics_post_id_image"
                    android:layout_width="360dp"
                    android:layout_height="96dp"
                    android:layout_margin="4dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/logistics_info"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/action_bar_size"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_logistics_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>